{
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "eslint.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[css]": {
    "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
  },
  "cSpell.words": [
    "chakra",
    "dracula",
    "drei",
    "rabbitmq",
    "testid",
    "Threejs",
    "Vertice"
  ],
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    ".history":true,
    "**/.next":true,
    "**/applications":true,
    "**/public":true,
    "package-lock.json":true,
  },
}